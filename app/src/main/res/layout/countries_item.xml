<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="8">

        <TextView
            android:id="@+id/countryItemName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="16dp"
            android:layout_weight="4"
            android:gravity="left"
            android:text="Country"
            android:layout_marginRight="3dp"
            android:textColor="@color/main_text"
            android:textSize="13sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="15dp"
                    android:layout_height="15dp"

                    app:srcCompat="@drawable/rise"
                    app:tint="@color/active" />

                <TextView
                    android:id="@+id/activeItemInc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="left"
                    android:text="TextView"
                    android:textColor="@color/active"
                    android:textSize="10sp" />


            </LinearLayout>


            <TextView
                android:id="@+id/activeItemCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"

                android:layout_weight="1"
                android:text="Active"
                android:textColor="@color/active"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:layout_constraintBottom_toBottomOf="@+id/confirmedItemInc"
                    app:layout_constraintEnd_toStartOf="@+id/confirmedItemInc"
                    app:layout_constraintStart_toStartOf="@+id/guideline3"
                    app:layout_constraintTop_toTopOf="@+id/confirmedItemInc"
                    app:srcCompat="@drawable/rise"
                    app:tint="@color/confirmed" />


                <TextView
                    android:id="@+id/confirmedItemInc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="TextView"
                    android:textColor="@color/confirmed"
                    android:textSize="10sp" />


            </LinearLayout>


            <TextView
                android:id="@+id/confirmedItemCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"

                android:layout_weight="1"
                android:text="Confirmed"
                android:textColor="@color/confirmed"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"

            android:gravity="left"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:layout_constraintBottom_toTopOf="@+id/recoveredItemCount"
                    app:layout_constraintEnd_toStartOf="@+id/recoveredItemInc"
                    app:layout_constraintStart_toStartOf="@+id/guideline5"
                    app:layout_constraintTop_toTopOf="@+id/recoveredItemInc"
                    app:layout_constraintVertical_bias="0.13999999"
                    app:srcCompat="@drawable/rise"
                    app:tint="@color/recovered" />

                <TextView
                    android:id="@+id/recoveredItemInc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="left"
                    android:text="TextView"
                    android:textColor="@color/recovered"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/recoveredItemCount"
                    app:layout_constraintEnd_toStartOf="@+id/guideline6"
                    app:layout_constraintStart_toEndOf="@+id/imageView9" />


            </LinearLayout>


            <TextView
                android:id="@+id/recoveredItemCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:layout_weight="1"
                android:text="Recovered"
                android:textColor="@color/recovered"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline6"
                app:layout_constraintStart_toStartOf="@+id/guideline5" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/deathItemInc"
                    app:layout_constraintEnd_toStartOf="@+id/deathItemInc"
                    app:layout_constraintStart_toStartOf="@+id/guideline6"
                    app:layout_constraintTop_toTopOf="@+id/deathItemInc"
                    app:srcCompat="@drawable/rise"
                    app:tint="@color/deaths" />

                <TextView
                    android:id="@+id/deathItemInc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="left"
                    android:text="TextView"
                    android:textColor="@color/deaths"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/deathItemCount"
                    app:layout_constraintEnd_toStartOf="@+id/guideline7"
                    app:layout_constraintStart_toEndOf="@+id/imageView10" />


            </LinearLayout>


            <TextView
                android:id="@+id/deathItemCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"

                android:layout_marginStart="8dp"
                android:text="Deaths"
                android:textColor="@color/deaths"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline7"
                app:layout_constraintStart_toStartOf="@+id/guideline6" />


        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>
