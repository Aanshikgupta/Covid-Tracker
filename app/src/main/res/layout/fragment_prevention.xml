<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.PreventionFragment">


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:padding="15dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/wash_hands"
        app:lottie_repeatCount="2000"
        app:lottie_repeatMode="restart" />


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="260dp"

        android:padding="15dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/sanitizer"
        app:lottie_repeatCount="2000"
        app:lottie_repeatMode="restart" />


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:padding="15dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/use_mask"
        app:lottie_repeatCount="2000"
        app:lottie_repeatMode="restart" />


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:padding="15dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/stay_home"
        app:lottie_repeatCount="2000"
        app:lottie_repeatMode="restart"
        app:lottie_speed="1" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:padding="15dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/dont_touch_your_face"
        app:lottie_repeatCount="2000"
        app:lottie_repeatMode="restart"
        app:lottie_speed="1" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:padding="15dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/avoid_travelling"
        app:lottie_repeatCount="2000"
        app:lottie_repeatMode="restart"
        app:lottie_speed="1" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:padding="15dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/avoid_handshakes"
        app:lottie_repeatCount="2000"
        app:lottie_repeatMode="restart"
        app:lottie_speed="1" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:padding="15dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/avoid_crowd"
        app:lottie_repeatCount="2000"
        app:lottie_repeatMode="restart"
        app:lottie_speed="1" />



</LinearLayout>


